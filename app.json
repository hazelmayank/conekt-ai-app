{
  "expo": {
    "name": "conektMobileApp",
    "slug": "conektMobileApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "$GOOGLE_MAPS_API_KEY_IOS"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show truck positions on the map."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "package": "com.mayank765181.conektMobileApp",
      "config": {
        "googleMaps": {
          "apiKey": "$GOOGLE_MAPS_API_KEY_ANDROID"
        }
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to show truck positions on the map."
        }
      ],
      "expo-font"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ddecda52-9c70-46e4-9085-065581823ba9"
      }
    },
    "owner": "mayank765181"
  }
}
